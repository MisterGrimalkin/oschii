        {
          "driver": "Yellow",
          "valueTransform": {
            "inputRange": [
              34,
              50
            ]
          }
        },
        {
          "driver": "Green",
          "valueTransform": {
            "inputRange": [
              51,
              63
            ]
          }
        },
        {
          "driver": "Blue",
          "valueTransform": {
            "inputRange": [
              64,
              80
            ]
          }
        },
        {
          "driver": "Indigo",
          "valueTransform": {
            "inputRange": [
              80,
              90
            ]
          }
        },
        {
          "driver": "Violet",
          "valueTransform": {
            "inputRange": [
              91,
              100
            ]
          }
        }
      ]
    }
