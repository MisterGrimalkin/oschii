{
  "receivers": [
    {
      "name": "Snooty",
      "ip": "192.168.1.123"
    }
  ],
  "sensors": [
    {
      "name": "Knob",
      "type": "analog",
      "pin": 36
    }
  ],
  "drivers": [
    {
      "name": "Red",
      "type": "pwm",
      "pin": 16
    },
    {
      "name": "Orange",
      "type": "pwm",
      "pin": 17
