{
  "i2c": {
    "sdaPin": 4,
    "sclPin": 5,
    "modules": [
      {
        "name": "GPIO-A",
        "type": "gpio",
        "address": "0x20"
      },
      {
        "name": "PWM-A",
        "type": "pwm",
        "address": "0x40"
      }
    ]
  },
  "sensors": [
    {
      "name": "Button 1",
      "type": "gpio",
      "i2cModule": "GPIO-A",
      "pin": 7,
      "resistor": "up",
      "offValue": 0,
      "bounceFilter": 100,
      "invert": true
    },
    {
      "name": "Button 2",
      "type": "gpio",
      "i2cModule": "GPIO-A",
      "pin": 8,
      "resistor": "up",
      "offValue": 0,
      "bounceFilter": 100,
      "invert": true
    }
  ],
  "drivers": [
    {
      "name": "Green",
      "type": "pwm",
      "i2cModule": "PWM-A",
      "pin": 1,
      "valueTransform": {
        "outputRange": [
          0,
          4095
        ]
      }
    },
    {
      "name": "Blue",
      "type": "pwm",
      "i2cModule": "PWM-A",
      "pin": 0,
      "valueTransform": {
        "outputRange": [
          0,
          4095
        ]
      }
    },
    {
      "name": "Red",
      "type": "gpio",
      "i2cModule": "GPIO-A",
      "pin": 0
    }
  ],
  "sensorMonitors": [
    {
      "sensor": "Button 1",
      "sendTo": [
        {
          "~": "/green"
        },
        {
          "~": "/blue"
        }
      ]
    },
    {
      "sensor": "Button 2",
      "sendTo": [
        {
          "~": "/red"
        }
      ]
    }
  ],
  "driverRemotes": [
    {
      "address": "/green",
      "writeTo": [
        {
          "driver": "Green",
          "envelope": [
            {
              "amount": 100,
              "time": 250
            },
            {
              "amount": 100,
              "fadeToAmount": 0,
              "time": 250
            },
            {
              "loop": true
            }
          ]
        }
      ]
    },
    {
      "address": "/blue",
      "writeTo": [
        {
          "driver": "Blue",
          "envelope": [
            {
              "amount": 100,
              "fadeToAmount": 0,
              "time": 250
            },
            {
              "amount": 100,
              "time": 250
            },
            {
              "loop": true
            }
          ]

        }
      ]
    },
    {
      "address": "/red",
      "writeTo": [
        {
          "driver": "Red"
        }
      ]
    }
  ]
}
