{
  "sensors": [
    {
      "name": "Button",
      "type": "gpio",
      "pin": 32,
      "resistor": "down",
      "offValue": 0,
      "bounceFilter": 100
    }
  ],
  "drivers": [
    {
      "name": "Red",
      "type": "gpio",
      "pin": 16
    }
  ],
  "driverRemotes": [
    {
      "address": "/red",
      "writeTo": [
        {
          "driver": "Red"
        }
      ]
    }
  ],
  "sensorMonitors": [
    {
      "sensor": "Button",
      "sendTo": [
        {
          "~": "/red"
        }
      ]
    }
  ]
}